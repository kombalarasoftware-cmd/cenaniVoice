# ===========================================
# VoiceAI Platform - Environment Variables
# ===========================================

# Application
APP_NAME=VoiceAI Platform
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/voiceai
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=

# SIP Trunk Configuration
SIP_TRUNK_HOST=sip.your-provider.com
SIP_TRUNK_PORT=5060
SIP_TRUNK_TRANSPORT=udp
SIP_TRUNK_USERNAME=your-sip-username
SIP_TRUNK_PASSWORD=your-sip-password
SIP_TRUNK_CALLER_ID=+902121234567

# Asterisk ARI
ASTERISK_ARI_URL=http://localhost:8088/ari
ASTERISK_ARI_USERNAME=asterisk
ASTERISK_ARI_PASSWORD=asterisk

# MinIO (Object Storage for Recordings)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_RECORDINGS=recordings
MINIO_BUCKET_EXPORTS=exports

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@voiceai.com

# Webhook Secret
WEBHOOK_SECRET=your-webhook-signing-secret

# Feature Flags
FEATURE_PHONE_TEST=true
FEATURE_RECORDING=true
FEATURE_TRANSCRIPTION=true
FEATURE_AI_PROMPT_IMPROVE=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CONCURRENT_CALLS=50

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
