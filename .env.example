# =============================================================================
# VoiceAI Platform - Environment Variables
# Copy this file to .env and fill in actual values.
# DO NOT commit .env to version control.
# =============================================================================

# --- Application ---
APP_NAME=VoiceAI Platform
DEBUG=false

# --- Security (REQUIRED - generate with: python -c "import secrets; print(secrets.token_urlsafe(64))") ---
SECRET_KEY=
WEBHOOK_SECRET=

# --- Database (REQUIRED) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=voiceai
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DATABASE_POOL_SIZE=20

# --- Redis (REQUIRED) ---
REDIS_PASSWORD=
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# --- OpenAI (required for OpenAI Realtime provider) ---
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# --- Ultravox (required for Ultravox provider) ---
ULTRAVOX_API_KEY=
ULTRAVOX_BASE_URL=https://api.ultravox.ai/api
ULTRAVOX_WEBHOOK_URL=https://your-public-url/api/v1/webhooks/ultravox

# --- SIP Trunk ---
SIP_TRUNK_HOST=
SIP_TRUNK_PORT=5060
SIP_TRUNK_TRANSPORT=udp
SIP_TRUNK_USERNAME=
SIP_TRUNK_PASSWORD=
SIP_TRUNK_CALLER_ID=

# --- Asterisk ARI (REQUIRED) ---
ASTERISK_HOST=asterisk
ASTERISK_ARI_PORT=8088
ASTERISK_ARI_USER=
ASTERISK_ARI_PASSWORD=

# --- Asterisk SIP Bridge (for Ultravox outbound calls) ---
ASTERISK_EXTERNAL_HOST=
ASTERISK_SIP_PORT=5060
ULTRAVOX_SIP_USERNAME=ultravox
ULTRAVOX_SIP_PASSWORD=

# --- MinIO (Object Storage - REQUIRED) ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET_RECORDINGS=recordings
MINIO_BUCKET_EXPORTS=exports

# --- Celery ---
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/0

# --- CORS ---
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# --- Rate Limiting ---
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CONCURRENT_CALLS=50

# --- File Upload ---
MAX_UPLOAD_SIZE_MB=10

# --- WebSocket ---
MAX_WEBSOCKET_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30
