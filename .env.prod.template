# ===========================================
# VoiceAI Platform - Production Environment Template
# ===========================================
# WARNING: Never commit real API keys to version control!
# Copy this file to .env on the production server and fill in real values

# ============ Application ============
APP_NAME=VoiceAI Platform
APP_ENV=production
DEBUG=false

# ============ OpenAI ============
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE
OPENAI_ORGANIZATION=

# ============ Database ============
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=voiceai
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/voiceai
DATABASE_POOL_SIZE=20

# ============ Redis ============
REDIS_URL=redis://:changeme@redis:6379/0

# ============ Celery ============
CELERY_BROKER_URL=redis://:changeme@redis:6379/0
CELERY_RESULT_BACKEND=redis://:changeme@redis:6379/0

# ============ JWT ============
# IMPORTANT: Generate a secure random key for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=GENERATE_A_SECURE_RANDOM_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============ Asterisk ============
ASTERISK_HOST=asterisk
ASTERISK_ARI_PORT=8088
ASTERISK_ARI_USER=voiceai
ASTERISK_ARI_PASSWORD=voiceai_ari_secret
# Public IP/hostname where Asterisk is reachable from the internet
# Ultravox sends SIP INVITE to this address
ASTERISK_EXTERNAL_HOST=YOUR_SERVER_PUBLIC_IP
ASTERISK_SIP_PORT=5060
# SIP credentials for Ultravox endpoint (must match pjsip.conf [ultravox-auth])
ULTRAVOX_SIP_USERNAME=ultravox
ULTRAVOX_SIP_PASSWORD=CHANGE_ME

# ============ SIP Trunk ============
SIP_TRUNK_HOST=85.95.239.198
SIP_TRUNK_PORT=5060
SIP_TRUNK_TRANSPORT=udp
SIP_TRUNK_USERNAME=101
SIP_TRUNK_PASSWORD=CHANGE_ME
SIP_TRUNK_CALLER_ID=491632086421

# ============ MinIO (S3 Compatible) ============
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=voiceai-recordings
MINIO_BUCKET_RECORDINGS=recordings
MINIO_BUCKET_EXPORTS=exports

# ============ Frontend ============
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_WS_URL=

# ============ Backend ============
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ============ CORS ============
CORS_ORIGINS=["https://one.speakmaxi.com","http://one.speakmaxi.com"]

# ============ Rate Limiting ============
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CONCURRENT_CALLS=50

# ============ File Upload ============
MAX_UPLOAD_SIZE_MB=10

# ============ WebSocket ============
MAX_WEBSOCKET_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30

# ============ Webhook ============
WEBHOOK_SECRET=

# ============ Ultravox ============
ULTRAVOX_API_KEY=YOUR_ULTRAVOX_API_KEY
ULTRAVOX_BASE_URL=https://api.ultravox.ai/api
ULTRAVOX_WEBHOOK_URL=https://YOUR_DOMAIN/api/v1/webhooks/ultravox

# ============ Logging ============
LOG_LEVEL=INFO
LOG_FORMAT=json

REDIS_PASSWORD=changeme
